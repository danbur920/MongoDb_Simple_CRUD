@model IEnumerable<NBD_Lab_9.Models.Book>

@{
    ViewData["Title"] = "Books Page";
}

<h1>Lista Książek</h1>

<table class="table">
    <thead>
        <tr>
            <th>Tytuł</th>
            <th>Autor</th>
            <th>Rok</th>
            <th>Zarządzaj</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Year</td>
                <td>
                    <a asp-area="" asp-action="Delete" asp-controller="Book" asp-route-id="@book.Id" class="btn btn-danger">Usuń</a>
                    <a asp-area="" asp-action="Update" asp-controller="Book" asp-route-id="@book.Id" class="btn btn-warning">Aktualizuj</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-area="" asp-action="Add" asp-controller="Book" class="btn btn-primary">Dodaj</a>
